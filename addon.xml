<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<addon id="plugin.video.amvnews" version="1.2.0" name="AmvNews" provider-name="Pavel Antonov">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.xbmcswift2" version="1.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="resources/lib/__run__.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
        <source>https://github.com/pvantonov/kodi-amvnews</source>
        <license>MIT License</license>
        <forum/>
        <summary lang="en">AmvNews video plugin</summary>
        <description lang="en">Watch anime music video from the http://amvnews.ru</description>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
